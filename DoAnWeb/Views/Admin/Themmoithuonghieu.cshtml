@model DoAnWeb.Models.tblThuongHieu

@{
    ViewBag.Title = "Themmoithuonghieu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Thêm Thương Hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-left:20%">
            @Html.LabelFor(model => model.TenTH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width:40%">
                @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm Mới" class="btn btn-default" style="margin-left:30.9%" />
            </div>
        </div>
    </div>
}

<div style=" background-color: #ABBAC3; position: absolute; margin-left: 48.9%; top: 28%; width: 7%; height: 8.3%;">
    @Html.ActionLink("Trở Về", "Thuonghieu", null, new { @class = "textnone" })
    <style>
        a.textnone {
            font-size: 14px;
            color: white;
            margin-left: 25px;
            margin-top: 10px;
            position: absolute;
            text-decoration: none;
        }
    </style>
</div>
