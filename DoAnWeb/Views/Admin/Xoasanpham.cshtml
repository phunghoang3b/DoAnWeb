@model DoAnWeb.Models.tblSanPham

@{
    ViewBag.Title = "Xoasanpham";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Xác Nhận Thông Tin Sản Phẩm Cần Xóa</h2>

<h3 style="text-align:center">Bạn có chắc muốn xóa sản phẩm này?</h3>

<div>
    <hr />
    <dd>
        <img src="@Url.Content("~/Content/Hinhsanpham/"+ Model.HinhAnh)" style="margin-left:60%;width:37%;margin-top:-10px;border-radius:10px;border:1px solid" />
    </dd>
    <dl class="dl-horizontal" style="margin-top:-37%;margin-left:-17px;border:1px solid;width:61%;border-radius:10px">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaTien)
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:38%">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNCC)
        </dd>

        <dt>
            Thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTH)
        </dd>

        <dt>
            Loại sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

    </dl>
    <div class="delete-image">
        <img src="~/Content/images/delete.gif" style="width:24%;margin-left:214px" />
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:3%;margin-bottom:-30px">
            <input type="submit" value="Xóa sản phẩm" class="btn btn-default" style="margin-left:44%"/> |
            @Html.ActionLink("TRỞ VỀ", "Sanpham")
        </div>
    }
</div>
