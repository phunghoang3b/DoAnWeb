@model DoAnWeb.Models.tblSanPham

@{
    ViewBag.Title = "Chitietsanpham";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Chi Tiết Sản Phẩm</h2>

<div>
    <hr />
    <dd>
        <img src="@Url.Content("~/Content/Hinhsanpham/"+ Model.HinhAnh)" style="margin-left:60%;width:40%;margin-top:-10px;border-radius:10px;border:1px solid" />
    </dd>
    <dl class="dl-horizontal" style="margin-top:-40%;margin-left:-17px;border:1px solid;width:61%;border-radius:10px">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GiaTien) VNĐ
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNCC)
        </dd>

        <dt>
            Thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTH)
        </dd>

        <dt>
            Loại sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

    </dl>
</div>
<div class="vddetail">    
    <iframe width="500" height="240" src="https://www.youtube.com/embed/9vBERnMfQPY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen style="margin-left:125px"></iframe>
</div>
<p style="border:1px solid;text-align:center;background-color:orange;font-weight:bold;border-radius:5px;width:12%;margin-left:23%">
    @Html.ActionLink("ĐIỀU CHỈNH", "Suasanpham", new { id = Model.MaSP }, new { @class = "colorinline"}) |
    @Html.ActionLink("TRỞ VỀ", "Sanpham")
    <style>a.colorinline{text-decoration:none}</style>
</p>
